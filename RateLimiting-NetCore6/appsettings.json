{
  "RateLimiting": {
    "GlobalPolicy": {
      "PermitLimit": 10,
      "Window": "00:01:00",
      "QueueLimit": 0
    },
    "IpPolicy": {
      "PermitLimit": 3,
      "Window": "00:00:30"
    },
    "ApiPolicy": {
      "PermitLimit": 6,
      "Window": "00:01:00"
    },
    "ClientPolicy": {
      "PermitLimit": 10,
      "Window": "00:01:00"
    },
    "EndpointWhitelist": [ 
      "GET:/api/license", 
      "GET:/api/status",
      "POST:/api/status"
    ],
    "IpWhitelist": [ 
      "127.0.0.1", 
      "::1"
    ],
    "ClientWhitelist": [ 
      "dev-id-1", 
      "dev-id-2" 
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.RateLimiting": "Information"
    }
  },
  "AllowedHosts": "*"
}
